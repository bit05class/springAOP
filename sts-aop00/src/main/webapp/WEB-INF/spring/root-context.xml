<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Root Context: defines shared resources visible to all other web components -->
	<bean id="javaDao" class="com.bit.myapp.model.JavaDaoImpl"></bean>
	
	<bean id="myAdvice" class="com.bit.myapp.myaop.MyAdvice"></bean>
	<bean id="myProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="target" ref="javaDao"></property>
		<property name="interceptorNames">
			<array>
				<value>myAdvisor</value>
			</array>
		</property>
	</bean>
	
	<bean id="pointcut" class="org.springframework.aop.support.NameMatchMethodPointcut">
		<property name="mappedName" value="func01"></property>
	</bean>
	
	<bean id="myAdvisor" class="org.springframework.aop.support.DefaultPointcutAdvisor">
		<property name="pointcut" ref="pointcut"></property>
		<property name="advice" ref="myAdvice"></property>
	</bean>
	
